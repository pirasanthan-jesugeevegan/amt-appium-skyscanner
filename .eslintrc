{
  "env": {
    "mocha": true
  },
  "plugins": ["wdio","import"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "extends": ["standard", "plugin:wdio/recommended"],

  "rules": {
    "semi": [2, "always"],
    "no-useless-escape": 0,
    "function-paren-newline": 0,
    "no-multi-spaces": 0,
    "object-curly-newline": 0,
    "prefer-destructuring": 0,
    "no-param-reassign": 0,
    "no-mixed-operators": 0,
    "no-unused-vars": 1,
    "no-plusplus": 0,
    "max-len": ["warn", 140, { "ignoreComments": true }],
    "quote-props": ["error", "as-needed"],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline"
      }
    ],
    "one-var": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "space-before-blocks": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "no-var": 2,
    "no-console": 0,
    "prefer-template": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "class-methods-use-this": 0,
    "consistent-return": 0,
    "no-restricted-syntax": 0
  },
  "globals": {
    "$": true,
    "$$": true,
    "browser": true,
    "driver": true,
    "expect": true,
    "Promise": true,
    "describe": true,
    "beforeAll": true,
    "afterAll": true,
    "beforeEach": true,
    "afterEach": true
  }
}
